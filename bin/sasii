#!/usr/bin/env ruby
# Sadie/bin/sasii
#   dc 28/07/2013
#   dm 28/07/2013
# vr 1.0.0
#   sasii - SASM Interactive Interpreter
require 'sadie/sasm/sasii'

class String

  def byte
    bytes.first
  end

end

begin
  loop do
    begin
      system("stty raw -echo")
      str = STDIN.getc
    ensure
      system("stty -raw echo")
    end
    break if str == "\x03" # Interrupt
  end
end